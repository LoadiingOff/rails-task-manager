<div class="container pt-3">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>
  <%= link_to "Back to list", tasks_path %>
  <br>
  <%= link_to "Edit this task", edit_path %>
  <br>
  <%= link_to "Delete #{@task.title} ",
              task_path(@task),
              data: { turbo_method: :delete,
              turbo_confirm: 'Are you sure? ' }  %>
</div>
